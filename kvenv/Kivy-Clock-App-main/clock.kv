
<MyButton@MDRaisedButton>
    font_name: 'Roboto'


<MyLabel@MDLabel>
    halign: "left"
    font_name: 'Roboto'
    color: 'white'
    markup: True
    font_size: "45sp"

<MainScreen>
    time_label: time_label
    date_label: date_label
    #md_bg_color: app.theme_cls.bg_normal
    md_bg_color: 'black'

    MDBoxLayout:
        orientation: 'vertical'
        padding: '10dp'


        MDBoxLayout:
            orientation: "vertical"
            spacing: "6dp"
            padding: "12dp"
            adaptive_height: True 
            #pos_hint: {"center_x": .5, "center_y": .5}
            #md_bg_color: "blue"


            MyLabel:
                id: time_label
                halign: "center"
                text: "00:00:00 %p"
                #md_bg_color: "red"
                size_hint_y: None
                font_name: 'DisplayOTF'
                font_size: dp(60)
                height: self.texture_size[1]

            MyLabel:
                id: date_label
                text: "00/00/00"
                halign: "center"
                font_size: dp(14)
                size_hint_y: None
                height: self.texture_size[1]
                #md_bg_color: "yellow"
        
        MDBoxLayout:
            orientation: "horizontal"
            padding: "12dp"
            adaptive_height: True
            size_hint_y: None
            pos_hint: {"center_x": .5, "center_y": .5}

            MyLabel:
                text: "Weather data"
                font_size: dp(14)
            MyLabel:
                text: "[b][size=16dp]Waktu Solat[/size][/b]\nSubuh              01:34\nIsyak            01:34\nIsyak            01:34\nIsyak            01:34\nIsyak            01:34"
                font_size: dp(14)
                size_hint_y: None
                height: self.texture_size[1]
